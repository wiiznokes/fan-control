{
    "app-id": "com.wiiznokes.fan-control",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "fan-control",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "fan-control",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/fan-control/cargo"
                }
            },
            "build-commands": [
                "make -C ./hardware/libsensors/ install PREFIX=./../../build/libsensors ETCDIR=./../../build/libsensors/etc",
                "cargo --offline build --release --verbose",
                "install -Dm644 ./resource/linux/com.wiiznokes.fan-control.png /app/share/icons/hicolor/128x128/apps/com.wiiznokes.fan-control.png",
                "install -Dm644 ./resource/linux/com.wiiznokes.fan-control.metainfo.xml /app/share/metainfo/com.wiiznokes.fan-control.metainfo.xml",
                "install -Dm644 ./resource/linux/com.wiiznokes.fan-control.desktop /app/share/applications/com.wiiznokes.fan-control.desktop",
                "install -Dm755 ./target/release/fan-control -t /app/bin/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../.."
                },
                {
                    "type": "shell",
                    "commands": [
                        "git submodule update --init hardware/libsensors"
                    ]
                },
                "./../../cargo-sources.json"
            ]
        }
    ]
}